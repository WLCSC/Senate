<div class="navbar navbar-fixed-top hidden-phone">
	<div class="navbar-inner">
		<div class="container">
			<a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</a>
			<%= link_to "Senate", root_path, :class => 'brand' %>
			<div class="container nav-collapse">
				<ul class="nav">
					<% if current_user %>
						<li><%= link_to i('user') + " Log Out", delete_sessions_path %></li>
						<li><%= link_to i('edit') + " " + current_user.name, current_user %></li>
						<% if @chamber && @chamber.title != nil %>
							<li class="dropdown"><%= link_to i('briefcase') + ' ' + @chamber.title + " " + i('chevron-down'), @chamber %>
							
							<ul class="dropdown-menu">
							<li><%= link_to i('comment') + ' Discussion', chamber_boards_path(@chamber) %></li>
							<li><%= link_to i('inbox') + ' Proposals', chamber_proposals_path(@chamber) %></li>
							<li><%= link_to i('file') + ' Ballots', chamber_ballots_path(@chamber) %></li>
							<li><%= link_to i('globe') + ' Events', chamber_events_path(@chamber) %></li>
							<% if can(:execute, @chamber) %>
								<li><%= link_to i('lock') + " Permissions", chamber_permissions_path(@chamber) %></li>
								<li><%= link_to i('bullhorn') + " Titles", chamber_titles_path(@chamber) %></li>
							<% end %>
						</ul>
							</li>
						<% else %>
							<li><%= link_to i('briefcase') + "All Chambers", chambers_path %></li>
						<% end %>
					<% else %>
						<li><%= link_to "Log In", root_path %></li>
					<% end %>
				</ul>
			</div><!--/.nav-collapse -->
		</div>
	</div>
</div>
