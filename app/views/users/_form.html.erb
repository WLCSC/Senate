<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :username, :class => 'control-label' %>
    <div class="controls">
	    <% if @user.username %>
		    <p><%= @user.username %></p>
	    <% else %>
		    <%= f.text_field :username, :class => 'text_field' %>
	    <% end %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :administrator, :class => 'control-label' %>
    <div class="controls">
	    <% if current_user.admin? %>
		    <%= f.check_box :administrator, :class => 'check_box' %>
	    <% else %>
		    <p><%= truthy_thumb @user.administrator %></p>
	    <% end %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
	    <% if current_user.admin? %>
	      <%= f.text_field :name, :class => 'text_field' %>
      <% else %>
	      <p><%= @user.name %></p>
      <% end %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
	    <% if current_user.admin? || current_user == @user %>
		    <%= f.text_field :email, :class => 'text_field' %>
	    <% else %>
		    <p><%= @user.email %></p>
	    <% end %>
    </div>
  </div>

<% if (@user.id == nil) || (@user.password_hash  && (current_user.admin? || current_user == @user)) %>
  <div class="control-group">
    <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :class => 'password_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password_confirmation, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, :class => 'password_field' %>
    </div>
  </div>
<% end %>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>
