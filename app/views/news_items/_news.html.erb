<div class="news">
    <p><%= item.created_at.to_s %><br/>
	From <%= link_to item.user.name, item.user %><%= " in #{item.chamber.name}" if item.is_a? Announcement %>, <p>
	<h3><%= item.title %></h3>
	<%= item.content %>
	<div class="announce_foot"><%= link_to "Delete", item, :method => :delete if current_user && current_user.administrator %></div>
</div>