<div class="news" <%= 'style="margin: 0px;"'.html_safe if !center %>>
    <p><%= item.created_at.to_s %><br/>
	From <%= link_to (@chamber ? item.user.titleize(@chamber): item.user.name), item.user %>, <p>
	<h3><%= item.title %></h3>
	<%= item.content %>
	<div class="announce_foot">
		<%= link_to "Read #{item.count_children - 1} Comments", item %>
		<%= link_to "Reply", new_comment_path(:commentable_type => "Announcement", :commentable_id => item.id, :parent_id => item) if can(:comment) %>
		<%= link_to "Delete", item, :method => :delete if can(:admin) %>
	</div>
</div>