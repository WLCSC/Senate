<% title "Log In" %>
      
    <%= form_tag '/sessions' do %>  
      <p>  
        <%= label_tag :username %><br />  
        <%= text_field_tag :username, params[:username] %>  
      </p>  
      <p>  
        <%= label_tag :password %><br />  
        <%= password_field_tag :password %>  
      </p>  
      <p class="button"><%= submit_tag %></p>  
    <% end %>  
	
	